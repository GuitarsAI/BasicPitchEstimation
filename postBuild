#Test Lilypond
wget http://lilypond.org/download/binaries/linux-64/lilypond-2.18.2-1.linux-64.sh
sh lilypond-2.18.2-OS-TYPE.sh

# Test installing musescore
sudo add-apt-repository ppa:mscore-ubuntu/mscore-stable
sudo apt-get install musescore



wget https://ftp.osuosl.org/pub/musescore/releases/MuseScore-2.3.2/MuseScore-2.3.2-x86_64.AppImage
chmod u+x MuseScore*.AppImage


mkdir ./mydrive
mount -o loop MuseScore-2.3.2-x86_64.AppImage ./mydrive
./mydrive/AppRun

modprobe fuse
groupadd fuse
user="$(whoami)"
usermod -a -G fuse $user

./MuseScore-2.3.2-x86_64.AppImage --appimage-extract

jupyter contrib nbextension install --user
jupyter nbextension enable --py widgetsnbextension
jupyter nbextension enable python-markdown/main
jupyter nbextension enable hide_input/main

# Notebooks w/ extensions that auto-run code must be "trusted" to work the first time
jupyter trust pitch_estimation_binder.ipynb
